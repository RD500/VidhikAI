rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /history/{docId} {
      // Allow users to read their own history items.
      // The query must include `where('userId', '==', request.auth.uid)`.
      allow read: if request.auth != null && request.auth.uid == request.query.resource.data.userId;
      
      // Allow users to create, update, and delete their own history items.
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}